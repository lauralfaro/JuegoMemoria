<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:weightSum="3"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="3"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img1"
            android:scaleType="centerInside"
            android:layout_weight="1"
            android:src="@drawable/imagen8"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/img2"
            android:scaleType="centerInside"
            android:layout_weight="1"
            android:src="@drawable/imagen8"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/img3"
            android:scaleType="centerInside"
            android:layout_weight="1"
            android:src="@drawable/imagen8"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="3"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@drawable/imagen8" />

        <ImageView
            android:id="@+id/img5"
            android:scaleType="centerInside"
            android:layout_weight="1"
            android:src="@drawable/imagen8"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/img6"
            android:scaleType="centerInside"
            android:layout_weight="1"
            android:src="@drawable/imagen8"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="3"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img7"
            android:scaleType="centerInside"
            android:layout_weight="1"
            android:src="@drawable/imagen8"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/img8"
            android:scaleType="centerInside"
            android:layout_weight="1"
            android:src="@drawable/imagen8"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/img9"
            android:scaleType="centerInside"
            android:layout_weight="1"
            android:src="@drawable/imagen8"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>


</LinearLayout>